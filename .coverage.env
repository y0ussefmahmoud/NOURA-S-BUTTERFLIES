# Coverage Configuration

# Vitest Coverage Settings
# -------------------------

# Coverage thresholds
VITE_COVERAGE_THRESHOLD=70

# Coverage reporters
VITE_COVERAGE_REPORTERS=text,json,html,lcov

# Coverage output directory
VITE_COVERAGE_DIR=./coverage

# Files to exclude from coverage
VITE_COVERAGE_EXCLUDE=node_modules/,src/tests/,**/*.d.ts,**/*.config.*,dist/

# Jest Coverage Settings (for comparison)
# -------------------------

# Coverage thresholds
JEST_COVERAGE_THRESHOLD=70

# Coverage collectors
JEST_COVERAGE_COLLECTORS=v8

# Coverage reporters
JEST_COVERAGE_REPORTERS=text,json,html,lcov

# Coverage directory
JEST_COVERAGE_DIRECTORY=coverage

# Files to exclude from coverage
JEST_COVERAGE_PATH_IGNORE_PATTERNS=node_modules/,src/tests/,**/*.d.ts,**/*.config.*,dist/

# Playwright Coverage Settings
# -------------------------

# Coverage reporters
PLAYWRIGHT_COVERAGE_REPORTERS=html,json

# Coverage output directory
PLAYWRIGHT_COVERAGE_DIR=test-results/coverage

# Flutter Coverage Settings
# -------------------------

# Coverage output directory
FLUTTER_COVERAGE_DIR=coverage

# Exclude files from coverage
FLUTTER_COVERAGE_EXCLUDE=**/*.g.dart,**/*.freezed.dart

# Minimum coverage percentage
FLUTTER_COVERAGE_THRESHOLD=70

# Codecov Configuration
# ---------------------

# Repository token (set in GitHub secrets)
CODECOV_TOKEN=${CODECOV_TOKEN}

# Coverage flags
CODECOV_FLAGS=react,flutter

# Coverage directory
CODECOV_DIRECTORY=./coverage

# Coverage files
CODECOV_FILES=coverage/lcov.info

# Fail CI if coverage drops below threshold
CODECOV_FAIL_CI_IF_ERROR=true

# Coverage report formats
CODECOV_FORMATS=lcov,html,txt

# Coverage comment settings
CODECOV_COMMENT_LAYOUT=reach,diff,flags,files,footer
CODECOV_COMMENT_BEHAVIOR=default

# Coverage upload settings
CODECOV_UPLOAD=true
CODECOV_UPLOAD_TOKEN=${CODECOV_TOKEN}

# Coverage comparison settings
CODECOV_COMPARE=origin/main
